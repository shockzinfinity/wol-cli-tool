{
  // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
  // 기존 특성에 대한 설명을 보려면 가리킵니다.
  // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
  "version": "0.2.0",
  "configurations": [
   {
      "name": "Debug WOL CLI (direct args)",
      "type": "coreclr",
      "request": "launch",

      // 실행 대상: 빌드된 DLL
      "program": "${workspaceFolder}/WolCliTool/bin/Debug/net8.0/WolCliTool.dll",

      // wol 뒤에 붙일 CLI 인자들
      "args": [
        "--mac", "88-36-6C-FD-EC-4A",
        "--ip", "192.168.0.255",
        "--port", "9",
        "--verbose"
      ],

      "cwd": "${workspaceFolder}/WolCliTool",
      "console": "integratedTerminal",
      "stopAtEntry": false,

      // 디버그 전 자동 빌드
      "preLaunchTask": "build"
    }
  ]
}